<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.DropShadow?>

<BorderPane style="-fx-background-image: url('/org/example/gocheckfx/images/logo.jpg'); -fx-background-position: left; -fx-background-repeat: no-repeat; -fx-background-size: cover;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.gocheckfx.controllers.EmployeeScanController">
    <top>
        <HBox alignment="CENTER" prefHeight="100.0" spacing="30.0" style="-fx-background-color: #336699; -fx-border-color: #2d5a8a; -fx-border-width: 0 0 1 0;" BorderPane.alignment="CENTER">
            <children>
                <Label text="GoCheck - Control de Asistencia" textFill="WHITE">
                    <font>
                        <Font name="Arial Bold" size="28.0" />
                    </font>
                    <effect>
                        <DropShadow color="#00000033" radius="5.0" spread="0.2" />
                    </effect>
                </Label>
                <Label fx:id="timeLabel" text="00:00:00 - 01/01/2023" textFill="WHITE">
                    <font>
                        <Font name="Arial" size="20.0" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
            </padding>
        </HBox>
    </top>
    <center>
        <HBox alignment="TOP_LEFT" spacing="40.0" style="-fx-background-color: rgba(255, 255, 255, 0.8); -fx-border-radius: 10px; -fx-background-radius: 10px;" BorderPane.alignment="TOP_LEFT">
            <children>
                <!-- Columna izquierda: Cámara -->
                <VBox alignment="TOP_LEFT" prefWidth="600.0" spacing="30.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Pane fx:id="cameraPane" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #f0f0f0; -fx-background-radius: 10px;">
                            <effect>
                                <DropShadow color="#00000033" radius="8.0" spread="0.2" />
                            </effect>
                        </Pane>
                    </children>
                    <padding>
                        <Insets top="30.0" left="30.0" />
                    </padding>
                </VBox>
                <!-- Columna derecha: Texto y controles -->
                <VBox alignment="TOP_LEFT" prefWidth="400.0" spacing="30.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Escanea tu código para registrarte">
                            <font>
                                <Font name="Arial" size="22.0" />
                            </font>
                            <effect>
                                <DropShadow color="#00000033" radius="3.0" spread="0.2" />
                            </effect>
                        </Label>
                        <HBox alignment="CENTER_LEFT" spacing="20.0">
                            <children>
                                <TextField fx:id="codeField" prefHeight="45.0" prefWidth="250.0" promptText="Código de empleado" style="-fx-background-radius: 5px; -fx-border-radius: 5px; -fx-border-color: #cccccc;">
                                    <font>
                                        <Font name="Arial" size="16.0" />
                                    </font>
                                </TextField>
                                <Button fx:id="scanButton" mnemonicParsing="false" prefHeight="45.0" prefWidth="180.0" text="Iniciar Escaneo" style="-fx-background-color: #336699; -fx-text-fill: white; -fx-background-radius: 5px; -fx-border-radius: 5px; -fx-cursor: hand;">
                                    <font>
                                        <Font name="Arial Bold" size="16.0" />
                                    </font>
                                    <effect>
                                        <DropShadow color="#00000033" radius="3.0" spread="0.2" />
                                    </effect>
                                </Button>
                            </children>
                        </HBox>
                        <Label fx:id="statusLabel" text="Preparando cámara..." textFill="#0066cc">
                            <font>
                                <Font name="Arial Italic" size="18.0" />
                            </font>
                        </Label>
                        <VBox fx:id="employeeInfoBox" alignment="CENTER" prefHeight="250.0" prefWidth="350.0" spacing="15.0" style="-fx-background-color: #f0f0f0; -fx-border-color: #cccccc; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-padding: 25px;">
                            <children>
                                <Label fx:id="employeeNameLabel" text="Nombre del Empleado">
                                    <font>
                                        <Font name="Arial Bold" size="22.0" />
                                    </font>
                                </Label>
                                <Label fx:id="positionLabel" text="Puesto: [Puesto]">
                                    <font>
                                        <Font name="Arial" size="16.0" />
                                    </font>
                                </Label>
                                <Label fx:id="shiftLabel" text="Turno: [Turno]">
                                    <font>
                                        <Font name="Arial" size="16.0" />
                                    </font>
                                </Label>
                                <Label fx:id="lastActionLabel" text="Última acción: [Acción]">
                                    <font>
                                        <Font name="Arial" size="16.0" />
                                    </font>
                                </Label>
                                <Label fx:id="nextActionLabel" text="Próxima acción: [Acción]">
                                    <font>
                                        <Font name="Arial" size="16.0" />
                                    </font>
                                </Label>
                            </children>
                            <effect>
                                <DropShadow color="#00000033" radius="8.0" spread="0.2" />
                            </effect>
                        </VBox>
                    </children>
                    <padding>
                        <Insets top="30.0" right="30.0" />
                    </padding>
                </VBox>
            </children>
            <padding>
                <Insets top="20.0" bottom="30.0" left="20.0" right="20.0" />
            </padding>
        </HBox>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" prefHeight="80.0" spacing="20.0" style="-fx-background-color: #f5f5f5; -fx-border-color: #cccccc; -fx-border-width: 1 0 0 0;" BorderPane.alignment="CENTER">
            <children>
                <Label text="© 2023 GoCheck - Sistema de Control de Asistencia">
                    <font>
                        <Font name="Arial" size="14.0" />
                    </font>
                </Label>
                <Button fx:id="adminLoginButton" mnemonicParsing="false" text="Admin" style="-fx-background-color: #336699; -fx-text-fill: white; -fx-background-radius: 5px; -fx-border-radius: 5px; -fx-cursor: hand;">
                    <font>
                        <Font name="Arial Bold" size="14.0" />
                    </font>
                    <effect>
                        <DropShadow color="#00000033" radius="3.0" spread="0.2" />
                    </effect>
                </Button>
            </children>
            <padding>
                <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>